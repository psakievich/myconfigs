# fix annoying completion issue in rhel7
shopt -u progcomp
 
# file permissions
umask u=rwx,go=rx

export SOFT_DIR=${HOME}/soft
export PATH=${HOME}/myconfig_bin/bin:${PATH}
export EDITOR=nvim
alias vim=nvim

function cdh(){
  cd ${HOME}
}

